module bindbc.spirvcross.loader;

import core.stdc.stdint;
import bindbc.loader;
import bindbc.spirvcross.types;
import bindbc.spirvcross.funcs;

enum SPVCSupport
{
    noLibrary,
    badLibrary,
    v064
}

private
{
    SharedLib lib;
    SPVCSupport loadedVersion;
}

void unloadGLSLang()
{
    if (lib != invalidHandle)
    {
        lib.unload();
    }
}

SPVCSupport loadedSPVCVersion()
{
    return loadedVersion;
}

bool isSPVCLoaded()
{
    return lib != invalidHandle;
}

SPVCSupport loadSPVC()
{
    version(Windows)
    {
        const(char)[][1] libNames =
        [
            "spirv-cross.dll"
        ];
    }
    else version(OSX)
    {
        const(char)[][1] libNames =
        [
            "spirv-cross.dylib"
        ];
    }
    else version(Posix)
    {
        const(char)[][2] libNames =
        [
            "libspirv-cross.so",
            "/usr/local/lib/libspirv-cross.so",
        ];
    }
    else static assert(0, "SPIRV-Cross is not yet supported on this platform.");
    
    SPVCSupport ret;
    foreach(name; libNames)
    {
        ret = loadSPVC(name.ptr);
        if (ret != SPVCSupport.noLibrary)
            break;
    }
    return ret;
}

SPVCSupport loadSPVC(const(char)* libName)
{
    lib = load(libName);
    if(lib == invalidHandle)
    {
        return SPVCSupport.noLibrary;
    }
    
    auto errCount = errorCount();
    loadedVersion = SPVCSupport.badLibrary;
    
    import std.algorithm.searching: startsWith;
    static foreach(symbol; __traits(allMembers, bindbc.spirvcross.funcs))
    {
        static if (symbol.startsWith("spvc_"))
            lib.bindSymbol(
                cast(void**)&__traits(getMember, bindbc.spirvcross.funcs, symbol),
                __traits(getMember, bindbc.spirvcross.funcs, symbol).stringof);
    }
    
    loadedVersion = SPVCSupport.v064;
    
    if (errorCount() != errCount)
        return SPVCSupport.badLibrary;
    
    return loadedVersion;
}
